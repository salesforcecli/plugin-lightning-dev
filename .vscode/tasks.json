{
  "version": "2.0.0",
  "problemMatcher": "$tsc",
  "tasks": [
    {
      "label": "Build CLI Plugin",
      "group": { "kind": "build", "isDefault": true },
      "command": "yarn",
      "type": "shell",
      "presentation": { "focus": false, "panel": "dedicated" },
      "args": ["build"],
      "isBackground": false
    },
    {
      "label": "Compile plugin only",
      "command": "yarn",
      "type": "shell",
      "presentation": { "focus": false, "panel": "shared" },
      "args": ["compile"],
      "isBackground": false,
      "problemMatcher": "$tsc"
    }
  ]
}
